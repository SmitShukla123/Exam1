@using Exam1.Model
@model Register

@if (TempData["Error"] != null)
{
	<script type="text/javascript">
		alert("@TempData["Error"]");
	</script>
}

<h2>Welcome This Is A Register Page</h2>


<form asp-action="RegisterM" asp-controller="UserController1" method="post" enctype="multipart/form-data">

	<div>
		<label>Name</label>
		<input type="text" name="name" />
		<span asp-validation-for="name" class="text-danger"></span>
	</div></br>


	<div>
		<label>email</label>
		<input type="email" name="email" />
		@* @* <span asp-validation-for="email" class="text-danger"></span> *@

	</div></br>


	<div>
		<label>password</label>
		<input type="password" name="password" />
		@* <span asp-validation-for="password" class="text-danger"></span> *@

	</div></br>

	<div>
		<label>cpassword</label>
		<input type="password" name="cpassword" />
		@* <span asp-validation-for="cpassword" class="text-danger"></span> *@

	</div></br>
	<button type="submit" class="btn btn-secondary"> Register</button>
	<p class="mt-3">
		Do have an account?
		<a asp-action="SingIN" asp-controller="UserController1">Not Create an Account</a>
	</p>
</form> 